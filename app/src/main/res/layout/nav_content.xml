<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_main"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:id="@+id/cv_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#ffff"
            android:id="@+id/img_nav"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/my_profire"
            tools:ignore="ContentDescription" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text="Email:"
        android:id="@+id/txt_email_nav_one"
        android:layout_toRightOf="@id/cv_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Dragontoon9@mail.com"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:id="@+id/txt_email_nav_two"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cv_nav"
        android:layout_below="@id/txt_email_nav_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="Tel:"
        android:layout_marginLeft="10dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:id="@+id/txt_tel_nav_one"
        android:layout_toRightOf="@id/cv_nav"
        android:layout_below="@id/txt_email_nav_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:text="01682563828"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cv_nav"
        android:layout_below="@id/txt_tel_nav_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />
</RelativeLayout>